        <Button id="detailCodeAddBtn" taborder="5" text="+" position2="absolute l:819 w:37 t:596 h:37" positiontype="position2" onclick="detailCodeAddBtn_onclick"/>
        <Button id="detailCodeDeleteBtn" taborder="6" text="-" position2="absolute l:870 w:37 t:596 h:37" positiontype="position2" onclick="detailCodeDeleteBtn_onclick"/>
