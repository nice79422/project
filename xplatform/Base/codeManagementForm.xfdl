              <Rows>
                <Row size="24" band="head"/>
                <Row size="24"/>
              </Rows>
              <Band id="head">
                <Cell displaytype="normal" style="background:silver;" text="구분코드"/>
                <Cell col="1" displaytype="normal" style="background:silver;" text="상세코드"/>
