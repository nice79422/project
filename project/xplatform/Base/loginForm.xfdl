               ,"callback",
               false
               );
 
  
  }


function callback(trid, ErrorCode, ErrorMsg) {
   if(trid=="checkLogin"){
      if(ErrorCode<0){
         alert(ErrorMsg);   
      }else{      
         g_businessPlaceCode=businessPlaceCode.text;
         alert("로그인성공");
         
         go("Base::mainform.xfdl");
         
      }
   }
}
