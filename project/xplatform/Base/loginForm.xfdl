function loginBt_onclick(obj:Button,  e:ClickEventInfo)

{
	g_empCode=empCode.value;
  
   transaction( "checkLogin"
               ,"svcBase::checkLogin.do"
               ,""
               ,"ds_employee=dsEmployee"
