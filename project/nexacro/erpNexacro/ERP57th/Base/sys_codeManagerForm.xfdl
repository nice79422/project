            </Format>
          </Formats>
        </Grid>
        <Grid id="codeDetail_grid" taborder="2" useinputpanel="false" left="52.66%" top="158" right="7.34%" height="531" binddataset="ds_codeDetail" autofittype="col">
          <Formats>
            <Format id="default">
              <Columns>
                <Column size="40"/>
                <Column size="40"/>
                <Column size="40"/>
              </Columns>
              <Rows>
                <Row size="24" band="head"/>
                <Row size="24"/>
              </Rows>
