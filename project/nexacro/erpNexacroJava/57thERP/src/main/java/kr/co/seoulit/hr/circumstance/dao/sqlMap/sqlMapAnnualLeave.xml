<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.seoulit.hr.circumstance.dao.AnnualLeaveDAO">


<!-- payStepDAO -->


	<resultMap type="annualLeaveTO" id="annualLeaveResult">

		<result property="empCode" column="EMP_CODE" />
		<result property="standardYear" column="STANDARD_YEAR" />
		<result property="restDays" column="REST_DAYS" />
		<result property="usableDays" column="USABLE_DAYS" />
		<result property="usedDays" column="USED_DAYS" />
		<result property="lengthOfService" column="LENGTH_OF_SERVICE" />
	</resultMap>


	<parameterMap type="Map" id="annualLeaveMgtParameter">
		<parameter property="empCode" mode="IN" javaType="string" jdbcType="VARCHAR"/>
		<parameter property="standardYear" mode="IN" javaType="string" jdbcType="VARCHAR"/>
		<parameter property="hireDate" mode="IN" javaType="string" jdbcType="VARCHAR"/>
        <parameter property="errorCode" mode="OUT" javaType="string" jdbcType="VARCHAR"/>
        <parameter property="errorMsg" mode="OUT" javaType="string" jdbcType="VARCHAR"/>
	</parameterMap>


	<!-- 연차관리테이블을 조회하는 메서드 -->
	<select id="selectAnnualLeaveList" resultMap="annualLeaveResult">
    <![CDATA[
		SELECT EMP_CODE
			,STANDARD_YEAR
			,REST_DAYS
			,USABLE_DAYS
			,USED_DAYS
			,LENGTH_OF_SERVICE    	
		FROM ANNUAL_MGT
		ORDER BY STANDARD_YEAR DESC
    ]]>
    </select>

	<!-- 해당년도, 해당사원의 연차정보를 생성하는 메서드 -->
	
	<select id="createAnnualLeave" statementType="CALLABLE" parameterMap="annualLeaveMgtParameter">
		CALL P_HR_ANNUAL.P_CREATE_ANNUAL(?,?,?,?,?)
	</select>

	<!-- 추가!  -->
	<insert id="insertAnnualLeave" parameterType="annualLeaveTO">
	<![CDATA[
		INSERT INTO ANNUAL_MGT VALUES (
	            #{standardYear},
	            #{empCode},
	            #{usedDays},
	         	#{restDays},
	            #{usableDays},
	            #{lengthOfService}
	    )
    ]]>
	</insert>
	

	<!-- 연차관리테이블에서 연차를 수정하는 메서드  -->
	
	<update id="updateAnnualLeave" parameterType="annualLeaveTO">
	<![CDATA[
		UPDATE
			ANNUAL_MGT
		SET
			REST_DAYS = #{restDays},
			USABLE_DAYS = #{usableDays},
			USED_DAYS = #{usedDays},
			LENGTH_OF_SERVICE = #{lengthOfService}
		WHERE
			EMP_CODE = #{empCode}
		AND
			STANDARD_YEAR = #{standardYear}
	]]>
	</update>

	
	<!-- 연차관리테이블에서 해당년도, 해당사원의 연차를 삭제하는 메서드 -->
	
	<delete id="deleteAnnualLeave" parameterType="annualLeaveTO">
	<![CDATA[
	      DELETE FROM
	      		ANNUAL_MGT
	      WHERE
	            EMP_CODE = #{empCode}
	      AND
	       		STANDARD_YEAR=#{standardYear}
    ]]>
	</delete>
	 

	<!-- 연차신청시 연차관리테이블을 update하기위한 메서드 -->
	
	<update id="updateAnnualLeaveMgt" parameterType="Map">
	<![CDATA[
	      UPDATE
	            ANNUAL_MGT
	       SET
	            REST_DAYS = #{restDays},
	            USED_DAYS = #{days}
	       WHERE
	            EMP_CODE = #{empCode}
	       AND
	       		STANDARD_YEAR = #{standardYear}
    ]]>
	</update>

</mapper>