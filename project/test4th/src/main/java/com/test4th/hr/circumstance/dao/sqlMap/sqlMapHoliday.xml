    ]]>
	</update>
-->
	<!-- 휴일을 삭제하는 메서드 -->

	<delete id="deleteHoliday" parameterClass="holidayBean">
	<![CDATA[
		DELETE FROM HOLIDAY_MGT
 		WHERE BASIC_DAY = #basicDay#
    ]]>
	</delete>

</sqlMap>