	<Script><![CDATA[
var baseYear;
var baseMonth;

// 로딩 시 기준 년도 입력 
function monthlyAttdApplicationForm_OnLoadCompleted(obj)
{
	http.Sync=true;
	transaction("findEmployeeList","svcBase::/employee.do?method=findEmployeeList","","dsEmployee=dsEmployee","","callback"); //전체 사원 목록 받아 옴
	selYear.text=substr(today(),0,4);
	http.Sync=false;
}


// 미 마감 목록 조회시 

	
function monthAttdManagementTab_tab1_searchBtn_OnClick(obj)
{	
	baseYear=selYear.Value;
	baseMonth=selMonth.Value;  //검색 조건 년월 입력 !!
   if(selMonth.text == "" || selYear.text == ""){
     // alert("selMonth.text == '' || selYear.text == '' :( ");
      monthAttdManagementTab.tab1.indivisualItemBtn.Visible=false;  // 검색 조건을 넣지 않을 경우 
      break;
   }else{
	  http.Sync=true;
      transaction(
         "findUnClosedDailyAttdReport",
         "svcHrAttendance::/attdReport.do?method=findUnClosedDailyAttdReport",
         "",
         "dsUnCloseDailyAttd=dsDailyAttdReport",
         "baseYearMonth=" +(baseYear+baseMonth),
         "callback2"
      );
      http.Sync=false;
      
      if(confirm(baseYear+" "+baseMonth+" ")){
         if(dsUnCloseDailyAttd.GetRowCount()>0 ){ // 일근태 미마감 항목이 있다면 여기 실행!!
            Dialog("HR_ATTENDANCE::unCloseDailyAttdDialog.xml","baseYearMonth="+baseYear+baseMonth);
         }else{
            findMonthAttdReport();
         }   
      }
      monthAttdManagementTab.tab1.indivisualItemBtn.Visible=true;
   }
   
   monthAttdManagementTab.tab1.closeBtn.Enable=true;
	
}

// 월 근태 목록 조회 !!(프로시저 )
function findMonthAttdReport(){
   transaction(
      "findMonthAttdReport",
      "svcHrAttendance::/attdReport.do?method=findMonthAttdReport",
      "",
      "dsMonthAttdReport=dsMonthAttdReport",
      "baseYearMonth=" +(baseYear+baseMonth),
      "callback2"
   );
}


	
// 개인 항목 보기 !!!(숨겨진 버튼 활성화 시킴)
function monthAttdManagementTab_tab1_indivisualItemBtn_OnClick(obj)
{
	if(monthAttdManagementTab.tab1.indivisualItemBtn.Text=="단체항목"){
      monthAttdManagementTab.tab1.closeBtn.Enable=true;
      monthAttdManagementTab.tab1.indivisualItemDiv.Visible=true;
      monthAttdManagementTab.tab1.indivisualItemBtn.Text = "개인항목";
      dsMonthAttdReport.UnFilter();
   }else{
	
      var empCode=dsEmployee.GetColumn(dsEmployee.rowpos,"EMP_CODE");
      dsMonthAttdReport.Filter("EMP_CODE == '"+empCode+"'");
      
      monthAttdManagementTab.tab1.closeBtn.Enable=false;
      monthAttdManagementTab.tab1.indivisualItemDiv.Visible=false;
      monthAttdManagementTab.tab1.indivisualItemBtn.Text = "단체항목";
     
   }
}

// 사원 선택 시!!
function empGrid_OnCellClick(obj,nRow,nCell,nX,nY,nPivotIndex)
{
	var empCode=dsEmployee.GetColumn(nRow,"EMP_CODE");
	dsMonthAttdReport.Filter("EMP_CODE == '"+empCode+"'");
}

// 월근태 마감을 누를 경우 !!
function monthAttdManagementTab_tab1_closeBtn_OnClick(obj)
{
	 if(confirm("월근태 마감을 하시겠습니까?? ")){
      for(var index = 0; index < dsMonthAttdReport.rowCount; index++) {
         dsMonthAttdReport.SetColumn(index,"CLOSE_YN","Y");
      }
      updateMonthCloseYNTR();
      monthAttdManagementTab.tab1.indivisualItemBtn.Visible=false;
      monthAttdManagementTab.tab1.closeBtn.Enable=false;
   }   
}


function updateMonthCloseYNTR()
{
   transaction(
      "updateMonthAttdCloseYN",
      "svcHrAttendance::/attdReport.do?method=updateMonthAttdCloseYN",
      "dsMonthAttdReport=dsMonthAttdReport:u",
      "",
      "",
      "callback2"
   );
}




function callback2(trid, ErrorCode, ErrorMsg) {

   if(trid=='updateMonthAttdCloseYN'){ //마감 할 때 
      if(ErrorCode!=0){
         alert("ErrorCode!=0 :( ");
      }else{
         dsMonthAttdReport.ClearData(); // Column 만 제외 하고 나머지는 다 지움 
         /*monthAttdTab.monthAttdUnCloseTab.visualGridButton.Visible=false;*/
         alert(ErrorMsg);
      }
   }
   
   if(trid=='updateMonthAttdUnCloseYN'){
      if(ErrorCode!=0){
         alert("ErrorCode!=0 :( ");
      }else{
         dsClosedMonthAttdReport.ClearData();
         alert(ErrorMsg);
      }
   }
   
   if(trid=='findClosedMonthAttdReport'){
      if(ErrorCode!=0){
         alert("ErrorCode!=0");
      }else{
         if(dsClosedMonthAttdReport.GetRowCount()=0){
            monthAttdManagementTab.monthAttdCloseTab.UncloseButton.Enable=false;
            alert("해당 년월에 월근태 마감 내역이 존재하지 않습니다. ");
         }else{
            alert(ErrorMsg);
         }
      }   
   }
   
   
   if(trid=='findMonthAttdReport'){
      if(ErrorCode!=0){
         alert("ErrorCode!=0:( ");
      }else{
         var closeYN=dsMonthAttdReport.GetColumn(0,"CLOSE_YN");
         
         if(dsMonthAttdReport.GetRowCount() >0 && closeYN='Y'){ //미마감 내역 조회시 마감이 되어 있으면.. 
            dsMonthAttdReport.ClearData();
            monthAttdManagementTab.tab1.indivisualItemBtn.Visible=false;
            monthAttdManagementTab.tab1.closeBtn.Enable=false;
			
         }
		dsMonthAttdReport.Filter("CLOSE_YN='N'");
      }   
   }
}


// 월근태 마감 항목 조회시
function monthAttdManagementTab_tab2_findMonthAttdBtn_OnClick(obj)
{
	baseYear=selYear.Value;
	baseMonth=selMonth.Value;
	if(selMonth.text == "" || selYear.text == ""){
		alert(" 지정 년월을 입력 하세요 ");
		monthAttdManagementTab.tab2.uncloseBtn.Enable=false;
		break;
	}else{
		transaction(
		"findClosedMonthAttdReport",
		"svcHrAttendance::/attdReport.do?method=findClosedMonthAttdReport",
		"",
		"dsClosedMonthAttdReport=dsMonthAttdReport",
		"baseYearMonth=" +(baseYear+baseMonth),
		"callback2"
	);
		monthAttdManagementTab.tab2.uncloseBtn.Enable=true;
	}
}
//마감 취소 시!
function monthAttdManagementTab_tab2_uncloseBtn_OnClick(obj)
{
		
	 if(confirm(" 월 근태 마감을 취소 하시겠습니까? ")){
      for(var index = 0; index < dsClosedMonthAttdReport.rowCount; index++) {
         dsClosedMonthAttdReport.SetColumn(index,"CLOSE_YN","N");
      }
      
      transaction(
         "updateMonthAttdUnCloseYN",
         "svcHrAttendance::/attdReport.do?method=updateMonthAttdCloseYN",
         "dsMonthAttdReport=dsClosedMonthAttdReport:u",
         "",
         "",
         "callback2"
      );   
      monthAttdManagementTab.tab2.uncloseBtn.Enable=false;
   }
   
