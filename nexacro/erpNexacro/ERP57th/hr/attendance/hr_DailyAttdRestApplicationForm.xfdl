        <Static id="Static02" taborder="6" text="~" left="24.56%" top="81" right="71.98%" height="40"/>
        <Calendar id="toDate_cal" taborder="7" left="28.95%" top="81" right="59.75%" height="40"/>
        <Button id="search_btn" taborder="8" text="조회" left="41.43%" top="81" right="52.15%" height="40" onclick="search_btn_onclick"/>
        <Static id="Static04" taborder="9" text="신청구분" left="71.05%" top="258" right="20.84%" height="50"/>
