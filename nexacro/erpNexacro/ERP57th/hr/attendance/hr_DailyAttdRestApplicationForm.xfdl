        <Static id="Static06" taborder="11" text="기타수당" left="71.05%" top="434" right="20.84%" height="50"/>
        <Static id="Static07" taborder="12" text="추가경비" left="71.05%" top="522" right="20.84%" height="50"/>
        <Static id="Static08" taborder="13" text="사유" left="71.05%" top="610" right="20.84%" height="50"/>
        <Combo id="applyType_combo" taborder="14" left="80%" top="258" right="1.69%" height="50" innerdataset="@ds_attdRestType" codecolumn="DETAIL_CODE" datacolumn="DETAIL_CODE_NAME"/>
        <Calendar id="appFromDate_cal" taborder="15" left="80%" top="346" right="12.91%" height="50"/>
        <Calendar id="appToDate_cal" taborder="16" left="92.49%" top="346" right="1.1%" height="50"/>
        <Static id="Static09" taborder="17" text="~" left="88.02%" top="346" right="8.35%" height="50"/>
